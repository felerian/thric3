<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="textLightSmall" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#CCCCCC</item>
        <item name="android:typeface">serif</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="textLightLarge" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">#CCCCCC</item>
        <item name="android:typeface">serif</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="textDarkSmall" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#000000</item>
        <item name="android:typeface">serif</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="textDarkLarge" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">#000000</item>
        <item name="android:typeface">serif</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="embossed">
        <item name="android:background">@drawable/embossed</item>
    </style>
    <style name="menu_button" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">#000000</item>
        <item name="android:typeface">serif</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/card_front</item>
        <item name="android:padding">25dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
    </style>
    <style name="manual_image">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitEnd</item>
        <item name="android:padding">20dp</item>
    </style>
    <style name="manual_paragraph">
        <item name="android:textColor">#CCCCCC</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">20dp</item>
    </style>
</resources>
