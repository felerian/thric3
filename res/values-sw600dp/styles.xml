<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="text_counter" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">#CCCCCC</item>
        <item name="android:typeface">serif</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="text_counter_label" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#CCCCCC</item>
        <item name="android:typeface">serif</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="textDarkSmall" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">#000000</item>
        <item name="android:typeface">serif</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="textDarkLarge" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">#000000</item>
        <item name="android:typeface">serif</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="embossed">
        <item name="android:background">@drawable/embossed</item>
    </style>
    <style name="menu_button" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">#000000</item>
        <item name="android:typeface">serif</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/card_front</item>
        <item name="android:padding">25dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
    </style>
    <style name="manual_image">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitEnd</item>
        <item name="android:padding">20dp</item>
    </style>
    <style name="manual_paragraph">
        <item name="android:textColor">#CCCCCC</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">20dp</item>
    </style>
    <style name="score_frame">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:background">@drawable/embossed</item>
    </style>
    <style name="deal_button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:onClick">onButtonDealCards</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    <style name="player_button">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:onClick">onPlayerButton</item>
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
    </style>
    <style name="card_view">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">3dp</item>
    </style>
    <style name="symbol">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">5dp</item>
    </style>
    <style name="half_symbol">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">0.5</item>
        <item name="android:layout_margin">5dp</item>
    </style>
    <style name="dialog">
        <item name="android:padding">20dp</item>
    </style>
</resources>
