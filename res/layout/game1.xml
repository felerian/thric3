<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_table"
    >
    <LinearLayout
        android:id="@+id/grid_container"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="7"
        />
    <View
        android:layout_width="5dp"
        android:layout_height="fill_parent"
        android:background="@drawable/shadow_right"
        />
    <LinearLayout style="@style/sidebar" >
        <ImageView
            style="@style/deal_button"
            android:src="@drawable/button_deal_cards"
            />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            >
            <LinearLayout style="@style/score_frame" >
                <TextView
                    style="@style/text_counter_label"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_cards_left"
                    />
                <TextView
                    style="@style/text_counter"
                    android:id="@+id/text_cards_left"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    />
            </LinearLayout>
            <View style="@style/vspace" />
            <LinearLayout style="@style/score_frame" >
                <TextView
                    style="@style/text_counter_label"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/label_score"
                    />
                <TextView
                    style="@style/text_counter"
                    android:id="@+id/text_score_player1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="-"
                    />
            </LinearLayout>
        </LinearLayout>
        <ToggleButton
            style="@style/player_button"
            android:id="@+id/button_player1"
            android:background="@drawable/button_player1"
            />
    </LinearLayout>
</LinearLayout>

